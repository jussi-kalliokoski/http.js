{
  "node": true,
  "onecase": true,
  "maxlen": 140,
  "boss": true,
  "latedef": true,
  "noarg": true,
  "eqeqeq": true,
  "eqnull": true,
  "undef": true,
  "strict": true,
  "trailing": true,
  "expr": true,
  "overrides": {
    "test/**/*": {
      "node": false,
      "browser": true,
      "predef": [
        "Http",
        "Promise",
        "_",
        "using",
        "describe",
        "it",
        "beforeEach",
        "afterEach",
        "sinon",
        "chai",
        "expect"
      ]
    },
    "src/**/*": {
      "node": false,
      "browser": true,
      "globals": {
        "Http": true
      },
      "predef": [
        "Promise",
        "_"
      ]
    }
  }
}
